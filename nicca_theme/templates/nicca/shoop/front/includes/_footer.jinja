                    <h4 class="underline">{% trans %}Categories{% endtrans %}</h4>
                    <ul>
                    {% for c in shoop.general.get_root_categories() recursive %}
                        {% set children = c.get_children() %}
                        <li>
                            {% if children %}
                                <a href="{{ url("shoop:category", pk=c.pk, slug=c.slug) }}">{{ c }}</a>
                                <ul>{{ loop(children) }}</ul>
                            {% else %}
                                <a href="{{ url("shoop:category", pk=c.pk, slug=c.slug) }}">{{ c }}</a>

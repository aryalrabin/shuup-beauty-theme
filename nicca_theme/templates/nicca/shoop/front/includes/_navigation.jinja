                    </li>
                    {% endfor %}
                    {% if shoop.simple_cms %}
                        {% for link in xtheme.get_cms_navigation_links() %}
                            <li{% if request.path == "%s/" % link.url %} class="current"{% endif %}><a href="{{ link.url }}">{{ link.text }}</a></li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

</nav>

{% extends "shoop/front/base.jinja" %}
{% block content_title %}{% endblock %}

{% block extra_main_class %}index{% endblock %}

{% block content %}

{% placeholder frontpage_carousel %}{% endplaceholder %}

    <div class="container">

        {% placeholder "front_content" %}
            {% row %}
                {% plugin "shoop_beauty_theme.product_highlight" %}
                    type = "newest"
                    title = "New Products"
                {% endplugin %}
            {% endrow %}
            {% row %}
                {% plugin "shoop_beauty_theme.product_highlight" %}
                    type = "best_selling"
                    title = "Best selling products"
                {% endplugin %}
            {% endrow %}
        {% endplaceholder %}

        {% include "shoop/front/includes/_hot_deals_carousel.jinja" %}

        {% include "shoop/front/includes/_sale_and_offers_carousel.jinja" %}

    </div>
{% endblock %}
